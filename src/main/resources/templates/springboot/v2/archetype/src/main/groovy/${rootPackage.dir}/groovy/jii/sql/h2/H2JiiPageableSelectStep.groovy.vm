package ${rootPackage.name}.groovy.jii.sql.h2


import org.springframework.data.domain.Page
import org.springframework.data.domain.PageImpl
import org.springframework.data.domain.Pageable
import org.springframework.jdbc.core.JdbcTemplate

import ${rootPackage.name}.groovy.jii.sql.JiiSqlPageableSelectStep

class H2JiiPageableSelectStep implements JiiSqlPageableSelectStep {

	JdbcTemplate jdbcTemplate

	Map sqlFragments = [:]
	
	Pageable pageable;

	public H2JiiPageableSelectStep(JdbcTemplate jdbcTemplate, Map sqlFragments, Pageable pageable) {
		super()
		this.jdbcTemplate = jdbcTemplate
		this.sqlFragments = sqlFragments
		this.pageable = pageable;
	}

	@Override
	public Page<List<Map<String, Object>>> fetchMaps() {
		def count = jdbcTemplate.queryForObject(sqlFragments['countSql'], Long.class);
		def result = jdbcTemplate.queryForList(sqlFragments['sql']);
		return new PageImpl(result, pageable, count);
	}
}
