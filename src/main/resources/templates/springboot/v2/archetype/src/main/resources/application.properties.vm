#
# WEB CONFIGS 
#
server.servlet.context-path=/${projectName}
server.port=${OB}SERVER_PORT${CB}
spring.jackson.serialization.WRITE_DATES_AS_TIMESTAMPS=false

#
# DATABASE CONFIGS
#
spring.datasource.url=jdbc:h2:./target/db/${projectName};DB_CLOSE_ON_EXIT=FALSE
spring.datasource.driver-class-name=${OB}DB_DRIVER${CB}
spring.datasource.username=${OB}DB_USERNAME${CB}
spring.datasource.password=${OB}DB_PASSWORD${CB}
spring.datasource.sqlScriptEncoding=UTF-8
#spring.h2.console.path=/h2
#spring.h2.console.enabled=true
#spring.jpa.properties.hibernate.format_sql=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.hibernate.use-new-id-generator-mappings=true

#
# LOG CONFIGS
# 
logging.level.br.jus=INFO
logging.level.org.hibernate.SQL=WARN
logging.level.org.springframework.jdbc.core.JdbcTemplate=WARN

#
# FLYWAY CONFIGS
# 
spring.flyway.baseline-version=0
spring.flyway.baseline-on-migrate=true



