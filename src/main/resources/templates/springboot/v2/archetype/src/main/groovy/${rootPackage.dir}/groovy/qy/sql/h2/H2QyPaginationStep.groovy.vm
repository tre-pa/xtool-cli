package ${rootPackage.name}.groovy.qy.sql.h2

import org.springframework.data.domain.Pageable
import org.springframework.jdbc.core.JdbcTemplate

import ${rootPackage.name}.groovy.qy.sql.QySqlPageableSelectStep
import ${rootPackage.name}.groovy.qy.sql.QySqlPaginationStep

class H2QyPaginationStep implements QySqlPaginationStep {

	JdbcTemplate jdbcTemplate

	Map sqlFragments = [:]

	public H2QyPaginationStep(Map sqlFragments, JdbcTemplate jdbcTemplate) {
		super()
		this.sqlFragments = sqlFragments
		this.jdbcTemplate = jdbcTemplate
	}

	@Override
	public List<Map<String, Object>> fetchMaps() {
		jdbcTemplate.queryForList(sqlFragments['sql'])
	}

	@Override
	public QySqlPageableSelectStep limit(Pageable pageable) {
		def sql = sqlFragments['whereSql'] ? sqlFragments['whereSql'] : sqlFragments['sourceSql']
		sqlFragments['countSql'] = "select count(0) from (${OB}sql${CB})  "
		if(pageable.pageNumber == 0) {
			sqlFragments['sql'] = "${OB}sqlFragments['sql']${CB} limit ${OB}pageable.pageSize${CB}"
			return new H2QyPageableSelectStep(jdbcTemplate, sqlFragments, pageable);
		}
		sqlFragments['sql'] = "${OB}sqlFragments['sql']${CB} limit ${OB}pageable.pageSize${CB} offset ${OB}pageable.pageSize*pageable.pageNumber${CB}"
		return new H2QyPageableSelectStep(jdbcTemplate, sqlFragments, pageable);
	}
}
