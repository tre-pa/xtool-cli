package ${rootPackage.name}.groovy.report.repository.specification

import ${rootPackage.name}.groovy.jii.JiiSpecification
import ${rootPackage.name}.groovy.report.domain.JReport

import javax.persistence.criteria.CriteriaBuilder
import javax.persistence.criteria.CriteriaQuery
import javax.persistence.criteria.Predicate
import javax.persistence.criteria.Root

import org.springframework.data.jpa.domain.Specification
import org.springframework.stereotype.Component;

@Component
class JReportSpecification extends JiiSpecification<JReport> {
	
	@Override
	public Specification<JReport> fixedSpecification() {
		return new Specification() {
					@Override
					public Predicate toPredicate(Root root, CriteriaQuery query, CriteriaBuilder criteriaBuilder) {
						return criteriaBuilder.equal(root.get("mngtOnly"), false);
					}
				}
	}

}