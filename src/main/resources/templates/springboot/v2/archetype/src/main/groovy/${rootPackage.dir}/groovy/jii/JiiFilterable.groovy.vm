package ${rootPackage.name}.groovy.jii;
import ${rootPackage.name}.groovy.jii.filter.JiiExpression

import java.util.stream.Collectors

import javax.persistence.criteria.CriteriaBuilder
import javax.persistence.criteria.CriteriaQuery
import javax.persistence.criteria.Predicate
import javax.persistence.criteria.Root


/**
 * Classe de filtragem. Paramatro do m√©todo rest de filtragem.
 * 
 * @author jcruz
 *
 */
abstract class JiiFilterable extends JiiExpression {
	/**
	 * Lista dos predicados de filtragem
	 */
	List<? extends JiiExpression> predicates = []

	@Override
	String toSql() {
		predicates.stream()
				.map { it.toSql() }
				.collect(Collectors.joining())
	}

	@Override
	String toJpql() {
		predicates.stream()
				.map{ it.toJpql }
				.collect(Collectors.joining())
	}

	class EmptyJiiFilterable extends JiiFilterable {

		@Override
		public <T> Predicate toPredicate(Class<T> clazz, Root<T> root, CriteriaQuery<?> cq, CriteriaBuilder cb, Map paths) {
			return null
		}
	}
}
