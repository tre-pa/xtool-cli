package ${rootPackage.name}.security.resource;

import org.keycloak.representations.idm.authorization.ResourceRepresentation;
import org.keycloak.representations.idm.authorization.ScopeRepresentation;
import org.springframework.stereotype.Component;

import com.google.common.collect.Sets;

import br.jus.tre_pa.jsecurity.base.AbstractKcResource;

@Component
public class JReportMngtResource extends AbstractKcResource {

	@Override
	public void configure(ResourceRepresentation representation) {
		representation.setName("JREPORT_MNGT_RESOURCE");
		representation.setUris(Sets.newHashSet("/api/mngt/jreport/*"));
		// @formatter:off
		representation.setScopes(Sets.newHashSet(
				new ScopeRepresentation("GET"),
				new ScopeRepresentation("PUT"),
				new ScopeRepresentation("DELETE"),
				new ScopeRepresentation("POST")));
		// @formatter:on
	}

}
